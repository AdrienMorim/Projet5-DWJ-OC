{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <!-- Backend styles CSS -->
    <link rel="stylesheet" type="text/css" href="{{ asset("assets/css/backend.css") }}" media="screen">
{% endblock %}

{% block title %}
    Projets -
{% endblock %}

{% block header %}
    <header class="col-12 fixed-top" id="header">
        <div class="welcome row">
            <a class="col-2" href="{{ path("portfolio") }}">
                <img id="logo-web-nav" src={{ asset("assets/images/logo.png") }} alt="logo hexagonal de Morim Adrien">
            </a>
            <div class="col-10">
                <h1>Gestion des Projets</h1>
            </div>
        </div>
        <!-- /.welcome -->
    </header>
{% endblock %}

{% block body %}
    <div
        class="d-flex h-100" id="backend">
        <!-- NAV -->
        {% include "inc/navBackend.html.twig" %}
        <!-- HOME -->
        <div class="ml-auto col-lg-10 d-flex flex-column tt-backend" id="home-backend">
            <div class="row">
                <section class="container col-12" id="body-backend">
                    <div class="ml-lg-auto col-lg-3 col-md-12">
                        <div class="container text-center">
                            <a class="btn btn-info btn-submit-form" href="{{ path('work_create') }}">Nouveau Projet</a>
                        </div>
                    </div>
                    <div id="dark-bg">
                        <div class="container-fluid">
                            <div class="table-responsive-sm">
                                <table class="table table-striped table-hover" id="works-table">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Titre</th>
                                            <th scope="col">Sous-titre</th>
                                            <th scope="col">Contenu</th>
                                            <th scope="col">Image</th>
                                            <th scope="col">Categories</th>
                                            <th scope="col">Modifier</th>
                                            <th scope="col">Supprimer</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for work in works %}

                                            <tr class="link-table" onclick="document.location='{{ path(" work_show" , { 'id': work.id }) }}'">
                                                <th scope="row">
                                                    <strong>{{ work.id }}</strong>
                                                    <em>{{ work.createdAt | date('d/m/Y Ã  H:i') }}</em>
                                                </th>
                                                <td>
                                                    <strong>{{ work.title }}</strong>
                                                </td>
                                                <td>
                                                    <strong>{{ work.subtitle }}</strong>
                                                </td>
                                                <td>
                                                    <strong>{{ work.content|slice(0, 50) }}</strong>...</td>
                                                <td>
                                                    <strong>
                                                        <img src="{{ work.image }}" alt="{{ work.imageAlt }}">
                                                    </strong>
                                                </td>
                                                <td>
                                                    <strong>
                                                        {% for category in work.categories %}
                                                            <p>
                                                                {{ category.name }}
                                                            </p>
                                                        {% endfor %}
                                                    </strong>
                                                </td>
                                                <td>
                                                    <a class="btn btn-primary btn-add" href="{{ path('work_edit', { 'id': work.id }) }}">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                </td>
                                                <td>
                                                    <a class="btn btn-danger btn-add" href="{{ path('work_remove', { 'id': work.id }) }}">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- /.container -->
                    </div>
                    <!-- /.dark-bg -->
                </section>
                <!-- End Hire Section -->
            </div>
        </div>
    </div>
{% endblock %}

{% block footer %}{% endblock %}
