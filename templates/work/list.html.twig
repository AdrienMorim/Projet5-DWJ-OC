{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <!-- Backend styles CSS -->
    <link rel="stylesheet" type="text/css" href="{{ asset("assets/css/backend.css") }}" media="screen">
{% endblock %}

{% block title %} Projets - {% endblock %}

{% block header %}
    <header id="header" class="col-12 fixed-top">
        <div class="welcome row">
            <a class="col-2" href="{{ path("portfolio_dashbord") }}">
                <img id="logo-web-nav" src= {{ asset("assets/images/logo.png") }} alt="logo hexagonal de Morim Adrien">
            </a>
            <div class="col-10">
                <h1>Gestion des Projets</h1>
            </div>
        </div><!-- /.welcome -->
    </header>
{% endblock %}

{% block body %}
    <div id="backend" class="d-flex h-100">
        <!-- NAV -->
        {% include "inc/navBackend.html.twig" %}
        <!-- HOME -->
        <div id="home-backend" class="ml-auto col-lg-10 d-flex flex-column tt-backend">
            <div class="row">
                <section id="body-backend" class="container col-12">
                    <div class="ml-auto col-3">
                        <div class="container text-center">
                            <a class="btn btn-info" href="{{ path('work_create') }}">Nouveau Projet</a>
                        </div>
                    </div>
                    <div class="section-bg">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-12">
                                    <table id="emails-table" class="table table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th scope="col">#</th>
                                                <th scope="col">Titre</th>
                                                <th scope="col">Sous-titre</th>
                                                <th scope="col">Contenu</th>
                                                <th scope="col">Image</th>
                                                <th scope="col">Categories</th>
                                                <th scope="col">Date</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for work in works %}
                                                
                                                        <tr class="link-table" onclick="document.location='{{ path("work_show" , { 'id': work.id }) }}'">
                                                            <th scope="row"><strong>{{ work.id }}</strong></th>
                                                            <td><strong>{{ work.title }}</strong></td>
                                                            <td><strong>{{ work.subtitle }}</strong></td>
                                                            <td><strong>{{ work.content }}</strong></td>
                                                            <td><strong>
                                                                <img src="{{ work.image }}" alt="{{ work.imageAlt }}">
                                                            </strong></td>
                                                            <td><strong> 
                                                            {% for category in work.categories %}
                                                                <p> {{ category.title }} </p>
                                                            {% endfor %} 
                                                            </strong></td>
                                                            <td><em>{{ work.createdAt | date('d/m/Y Ã  H:i') }}</em></td>
                                                        </tr>
                                                
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div><!-- /.col-md-12 -->
                            </div><!-- /.row -->
                            <div class="row justify-content-center">
                                <nav class="page-nav" aria-label="Page navigation">
                                    <ul class="pagination">
                                        <li class="page-item disabled"><a class="page-link" href="#"> ' . $i . ' </a></li>';
                                        <li class="page-item"><a class="page-link" href=""> ' . $i . ' 
                                        </a></li>';
                                    </ul>
                                </nav>
                            </div>
                        </div><!-- /.container -->
                    </div><!-- /.emails-section-bg -->
                </section><!-- End Hire Section -->
            </div>
        </div>
    </div>
{% endblock %}

{% block footer %}{% endblock %}