{% extends 'base.html.twig' %}

{% form_theme formWork 'bootstrap_4_layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <!-- Backend styles CSS -->
    <link rel="stylesheet" type="text/css" href={{ asset("assets/css/backend.css") }} media="screen">
{% endblock %}

{% block title %} Ajouter un Projet - {% endblock %}

{% block header %}
    <header id="header" class="col-12 fixed-top">
        <div class="welcome row">
            <a class="col-2" href="{{ path("portfolio_dashbord") }}">
                <img id="logo-web-nav" src= {{ asset("assets/images/logo.png") }} alt="logo hexagonal de Morim Adrien">
            </a>
            <div class="col-10">
                 {% if editMode %}
                    <h1>Modifier le projet</h1>
                {% else %}
                    <h1>Ajouter un Projet</h1>
                {% endif %}
            </div>
        </div><!-- /.welcome -->
    </header>
{% endblock %}

{% block body %}
    <div id="backend" class="d-flex h-100">
        <!-- NAV -->
        {% include "inc/navBackend.html.twig" %}
        <div id="home-backend" class="ml-auto col-lg-10 d-flex flex-column tt-backend">
            <div class="row">
                <section id="body-backend" class="container col-11">
                    <div id="dark-bg">
                        <div class="container">
                            <div class="row">
                                <div class="col-12">
                                    {{ form_start(formWork) }}
                                        <div class="row">
                                            <div class="col-6">
                                                {{ form_row(formWork.title, { 
                                                    'label' : 'Titre', 
                                                    'attr' : { 'placeholder' : 'Titre du Projet' }
                                                    }) }}
                                            </div>
                                            <div class="col-6">
                                                {{ form_row(formWork.subtitle, { 
                                                    'label' : 'Sous-titre', 
                                                    'attr' : { 'placeholder' : 'Sous-titre du Projet' }
                                                    }) }}
                                            </div>
                                            <div class="col-12">
                                                {{ form_row(formWork.content, { 
                                                    'label' : 'Contenu', 
                                                    'attr' : { 'placeholder' : 'Contenu du Projet' }
                                                    }) }}
                                            </div>
                                            <div class="col-12">
                                                {{ form_row(formWork.link, { 
                                                    'label' : 'Lien', 
                                                    'attr' : { 'placeholder' : 'Url du Projet' }
                                                    }) }}
                                            </div>
                                            <div class="col-6">
                                                {{ form_row(formWork.image, { 
                                                    'label' : 'Image', 
                                                    'attr' : { 'placeholder' : 'Image du Projet' }
                                                    }) }}
                                            </div>
                                            <div class="col-6">
                                                {{ form_row(formWork.imageAlt, { 
                                                    'label' : 'Description de l\'image', 
                                                    'attr' : { 'placeholder' : 'Description de l\'image' }
                                                    }) }}
                                            </div>
                                            <div class="col-3 flex-wrap">
                                                {{ form_row(formWork.categories, {
                                                    'label' : 'Cat√©gories'
                                                    }) }}
                                            </div>
                                        </div>

                                    {% if editMode %}
                                        <button id="edit" type="submit" name="submit" class="btn btn-info align-self-end">
                                            Enregistrer les modifications
                                        </button>
                                    {% else %}
                                        <button id="save" type="submit" name="submit" class="btn btn-primary">
                                            Ajouter le nouveau projet
                                        </button>
                                    {% endif %}    
                            
                                    {{ form_end(formWork) }}
                                </div>
                            </div><!-- /.row -->
                        </div><!-- /.container -->
                    </div><!-- /.hire-section-bg -->
                </section><!-- End Hire Section -->
            </div>
        </div>
    </div>
{% endblock %}

{% block footer %}{% endblock %}