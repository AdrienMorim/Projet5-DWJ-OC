{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <!-- Backend styles CSS -->
    <link rel="stylesheet" type="text/css" href="{{ asset("assets/css/backend.css") }}" media="screen">
{% endblock %}

{% block title %} Projets - {% endblock %}

{% block header %}
    <header id="header" class="col-12">
        <div class="welcome">
            <div class="welcome-sub">Dashbord</div>
            <h1>Gestion des projets</h1>
        </div><!-- /.intro -->
    </header><!-- End Home Section -->
{% endblock %}

{% block body %}
    <section id="body-backend" class="container col-11 overflow-auto">
        <div class="section-bg">
            <div class="container">
                <div class="row">
                    <a class="link-back" href="{{ path('work_create') }}">Nouveau Projet</a>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <table id="emails-table" class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Titre</th>
                                    <th scope="col">Sous-titre</th>
                                    <th scope="col">Contenu</th>
                                    <th scope="col">Lien</th>
                                    <th scope="col">Image</th>
                                    <th scope="col">Categories</th>
                                    <th scope="col">Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for work in works %}
                                    <tr>
                                        <th scope="row"><strong>{{ work.id }}</strong></th>
                                        <td><strong>{{ work.title }}</strong></td>
                                        <td><strong>{{ work.subtitle }}</strong></td>
                                        <td><strong>{{ work.content }}</strong></td>
                                        <td><strong> 
                                                <a class="link-back" href=" {{ path("work_show" , { 'id': work.id }) }}" >Voir le projet {{ work.id }} </a>
                                            </strong>
                                        </td>
                                        <td><strong><img src="{{ work.image }}" alt="{{ work.imageAlt }}"></strong></td>
                                        <td><strong>Catégorie</strong></td>
                                        <td><em>{{ work.createdAt | date('d/m/Y à H:i') }}</em></td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div><!-- /.col-md-12 -->
                </div><!-- /.row -->
                <div class="row justify-content-center">
                    <nav class="page-nav" aria-label="Page navigation">
                        <ul class="pagination">
                            <li class="page-item disabled"><a class="page-link" href="#"> ' . $i . ' </a></li>';
                            <li class="page-item"><a class="page-link" href=""> ' . $i . ' 
                            </a></li>';
                        </ul>
                    </nav>
                </div>
            </div><!-- /.container -->
        </div><!-- /.emails-section-bg -->
    </section><!-- End Hire Section -->
{% endblock %}

{% block footer %}{% endblock %}